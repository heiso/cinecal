  "scripts": {
    "up": "docker-compose up -d && pm2 start ecosystem.config.js",
    "down": "pm2 delete ecosystem.config.js && docker-compose down",
    "log": "pm2 log",
    "restart": "pm2 delete ecosystem.config.js && pm2 start ecosystem.config.js",
    "test": "jest",
    "node": "SWCRC=true TS_NODE_PROJECT=tsconfig.json node --require dotenv/config --require @swc-node/register",
    "dev": "npm run node -- --enable-source-maps --inspect=0.0.0.0:9229 ./src/index.ts",
    "build": "npx tailwindcss -i ./src/app/tailwind.css -o ./src/app/styles.css --minify && remix build && tsc -p tsconfig.build.json",
    "lint": "tsc --noEmit && eslint . && prettier --check .",
    "reset-database": "prisma migrate reset -f --skip-generate"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@prisma/client": "^4.14.1",

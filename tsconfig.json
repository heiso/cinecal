{
  "exclude": ["dist"],
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "Node16",

    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": true,
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "moduleResolution": "node"
  }
}
